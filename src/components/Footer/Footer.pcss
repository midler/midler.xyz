footer {
  padding: 1em 1em 1em 1em;
  background: linear-gradient(var(--gray-gradient)) no-repeat;
  color: rgb(var(--gray));
  text-align: center;
}

.social-links {
  display: flex;
  justify-content: center;
  gap: 1em;
  margin-top: 1em;
  padding: 0;
  list-style-type: none;

  a {
    text-decoration: none;
    color: rgb(var(--gray));

    &:hover {
      color: rgb(var(--gray-dark));
    }
  }
}
